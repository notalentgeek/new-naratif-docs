source "https://rubygems.org"

# Core Jekyll (3.9.x is quite old; consider upgrading to 4.x if possible)
gem "jekyll", "~> 3.9.3"  # Pinned to a specific version for stability
gem "just-the-docs", "~> 0.7.0"  # Ensure theme compatibility

# Required for GFM (GitHub Flavored Markdown)
gem "kramdown", "~> 2.4"  # Explicitly require kramdown
gem "kramdown-parser-gfm", "~> 1.1"  # GFM support

# Plugins
gem "jekyll-seo-tag", "~> 2.8"  # SEO optimization
gem "jekyll-github-metadata", "~> 2.16"  # GitHub Pages metadata
gem "jekyll-include-cache", "~> 0.2.1"  # Caching includes

# Required for Jekyll 3.x (if not using Bundler 2+)
gem "webrick", "~> 1.8"  # Needed for Ruby 3.0+ with Jekyll 3.x
